<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/notosansui_regular</item>
    </style>

    <style name="PageTitle">
        <item name="android:textSize">@dimen/title</item>
        <item name="fontFamily">@font/notosansui_bold</item>
    </style>

    <style name="PageDescription">
        <item name="android:textSize">@dimen/body</item>
        <item name="fontFamily">@font/notosansui_regular</item>
    </style>

    <style name="SettingsHeader">
        <item name="android:textSize">@dimen/header</item>
        <item name="fontFamily">@font/notosansui_bold</item>
    </style>

    <style name="SettingsRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/body</item>
        <item name="fontFamily">@font/notosansui_regular</item>
    </style>

    <style name="ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="fontFamily">@font/notosansui_bold</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/body</item>
    </style>

    <style name="MonthYearPickerStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="buttonBarNegativeButtonStyle">@android:color/black</item>
        <item name="buttonBarPositiveButtonStyle">@color/colorAccent</item>
        <item name="headerBackgroundColor">@color/colorPrimary</item>
        <item name="headerTextColor">#66000000</item>
        <item name="headerTextColorSelected">@android:color/black</item>
        <item name="monthBackgroundColorSelected">@color/colorPrimaryDark</item>
        <item name="monthTextColor">@android:color/black</item>
        <item name="monthTextColorDisabled">#4F000000</item>
        <item name="monthTextColorSelected">@android:color/black</item>
        <item name="yearTextColor">@android:color/black</item>
        <item name="yearTextColorSelected">@color/colorPrimaryDark</item>
    </style>

</resources>
